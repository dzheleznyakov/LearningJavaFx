<?xml version="1.0" encoding="UTF-8" ?>
<?language javascript?>

<?import javafx.scene.control.Button ?>

<Button fx:controller="zh.learn.javafx.ch29fxml.CloseBtnController" text="Close" fx:id="closeBtn"
        onAction="closeWindow()" xmlns:fx="https://javafx.com/fxml">
    <fx:script>
        function closeWindow() {
            var scene = closeBtn.getScene();
            if (scene != null) {
                scene.getWindow().hide();
            }
        }
    </fx:script>
</Button>
